
<%= form_for(@contact) do |f| %>
  <div class="form-group ">
    <%= f.label :name, class: "col-sm-1 control-label" %>
    <%= f.text_field :name, autofocus: :true%>
  </div>
  <div class="form-group">
    <%= f.label :phone, class: "col-sm-1 control-label" %>
    <%= f.text_field :phone %>
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-1 control-label" %>
    <%= f.text_field :email, style: "margin-bottom: 1em" %>
  </div>
  <%= f.submit(class: "btn btn-primary ", style: "margin-bottom: 1em")%>
<% end %>
